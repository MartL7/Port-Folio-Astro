---
import '@fortawesome/fontawesome-free/css/all.css'
import GitIcon from '@/components/icons/Others/Git.astro'
import AstroIcon from '@/components/icons/Fronted/Astro.astro'
import VisualcodeIcon from '@/components/icons/Others/Visualcode.astro'
import TailwindIcon from '@/components/icons/Fronted/Tailwind.astro'
import TypescriptIcon from '@/components/icons/Backend/Typescript.astro'
import ExpressIcon from '@/components/icons/Backend/Express.astro'

const stacks = {
  noComponentIcon: [
    'fab fa-js-square text-yellow-500 text-2xl sm:text-3xl',
    'fab fa-html5 text-orange-500 text-2xl sm:text-3xl',
    'fab fa-css3 text-blue-500 text-2xl sm:text-3xl',
    'fab fa-react text-blue-400 text-2xl sm:text-3xl',
    'fab fa-node-js text-green-500/70 text-2xl sm:text-3xl',
    'fa-brands fa-php text-indigo-400/90 text-2xl sm:text-3xl'
  ],
  withComponent: [
    GitIcon,
    VisualcodeIcon,
    TypescriptIcon,
    TailwindIcon,
    ExpressIcon,
    AstroIcon
  ]
}
---

<article class="border shadow-border-custom rounded-2xl flex flex-col justify-center items-center flex-wrap col-start-1 col-end-2 row-start-3 row-end-4 sm:row-start-2 sm:row-end-3">

  <div class="flex flex-col gap-y-5 justify-center items-center p-5 h-full">
    <h3 class="text-white shadow-text-blue font-bold text-3xl text-center"> Skills </h3>
    <ul class="flex gap-4 max-w-72 justify-center items-center flex-wrap">
      {stacks.noComponentIcon.map(icon => (
        <li class="hover:scale-105 transition">
          <i class={icon}></i>
        </li>
      ))}
      {stacks.withComponent.map((Icon) => (
        <li class="hover:scale-105 transition">
          <Icon class="size-6 sm:size-7"/>
        </li>
      ))}
    </ul>
  </div>
</article>
