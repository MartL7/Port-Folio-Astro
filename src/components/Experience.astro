---
import ExperienceItem from '@/components/Experience/ExperienceItem.astro'
import { experience } from '@/consts/experience'
---

<h2 class="text-2xl sm:text-3xl font-bold text-blue-300/90 px-5 md:px-0 flex gap-x-4">
  <i class="fa-solid fa-terminal"></i>
  Experiencia
</h2>

<ul class="px-4 md:px-0" id="Experience">
  {experience.map((experiencie) => (
    <li class="mt-10 md:mt-14">
      <ExperienceItem {...experiencie} />
    </li>
  ))}
</ul>
